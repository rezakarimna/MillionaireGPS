            android:textColor="@color/colorText"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toTopOf="@id/GulH25"
            app:layout_constraintBottom_toBottomOf="@id/GulH50"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/GulV50"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="داخلی 4"
            android:textColor="@color/colorText"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toTopOf="@id/GulH50"
            app:layout_constraintBottom_toBottomOf="@id/GulH75"
            app:layout_constraintLeft_toLeftOf="@id/GulV50"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="واحد مالی میلیونر"
            android:textColor="@color/colorText"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toTopOf="@id/GulH50"
            app:layout_constraintBottom_toBottomOf="@id/GulH75"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/GulV50"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="داخلی 7"
            android:textColor="@color/colorText"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toTopOf="@id/GulH75"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/GulV50"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="واحد انتقادات و پیشنهادات "
            android:textColor="@color/colorText"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toTopOf="@id/GulH75"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/GulV50"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearCenter"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
